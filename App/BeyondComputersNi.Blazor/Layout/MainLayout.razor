@inherits LayoutComponentBase
<div class="page">
    <MudThemeProvider Theme="@BcniTheme" />
    <MudDialogProvider />
    <MudSnackbarProvider />

    <MudLayout>
        <MudAppBar Elevation="4">
            <MudIconButton Icon="@Icons.Material.Filled.Menu" Edge="Edge.Start" OnClick="@(() => DrawerOpen = !DrawerOpen)" />
            <MudContainer MaxWidth="MaxWidth.Large">
                <MudImage Src="img/beyondcomputers.png" Alt="Beyond Computers" Height="50"/>
            </MudContainer>
        </MudAppBar>

        <MudDrawer @bind-Open="@DrawerOpen" Elevation="4">
            <NavMenu />
        </MudDrawer>

        <MudMainContent>
            <MudContainer MaxWidth="MaxWidth.Large">
                @Body
            </MudContainer>
        </MudMainContent>
    </MudLayout>
</div>

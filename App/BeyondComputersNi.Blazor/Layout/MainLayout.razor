@inherits LayoutComponentBase
<div class="page">
    <MudThemeProvider />
    <MudDialogProvider />
    <MudSnackbarProvider />

    <MudLayout>
        <MudAppBar>
            <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@(() => DrawerOpen = !DrawerOpen)" />
            <MudContainer MaxWidth="MaxWidth.Large">
                Beyond Computers NI
            </MudContainer>
        </MudAppBar>

        <MudDrawer @bind-Open="@DrawerOpen">
            <NavMenu />
        </MudDrawer>

        <MudMainContent>
            <MudContainer MaxWidth="MaxWidth.Large">
                @Body
            </MudContainer>
        </MudMainContent>
    </MudLayout>
</div>

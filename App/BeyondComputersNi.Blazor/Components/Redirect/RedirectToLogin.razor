@using BeyondComputersNi.Blazor.Extensions
@using BeyondComputersNi.Blazor.Pages.Authentication.Login

<RedirectTo PageUrl="@LoginUrl" />

@code {
    [Inject]
    public NavigationManager? NavigationManager { get; set; }

    public string LoginUrl => $"{Login.PageUrl}?redirectTo={NavigationManager!.UrlWithoutBase()}";
}
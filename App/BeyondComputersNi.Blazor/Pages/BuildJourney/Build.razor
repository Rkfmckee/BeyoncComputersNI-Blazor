@using BeyondComputersNi.Blazor.Pages.BuildJourney.Components
@using BeyondComputersNi.Shared.ViewModels.Build
@attribute [Route(PageUrl)]

<MudText Typo="Typo.body1" Align="Align.Center" Class="mt-4">Setting up your build...</MudText>

@code {
    public const string PageUrl = "/Build";

    [Inject]
    private NavigationManager? NavigationManager { get; set; }

    public BuildViewModel? BuildViewModel { get; set; }

    protected override void OnInitialized()
    {
        // Create an instance of build, and return it's Id and Number in BuildViewModel

        BuildViewModel = new BuildViewModel(BuildComponents.BuildComponents.PageUrl);

        NavigationManager?.NavigateTo(BuildViewModel.ComponentsUrl);
    }
}
